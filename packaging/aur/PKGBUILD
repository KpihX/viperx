# Maintainer: KpihX <kapoivha@gmail.com>
pkgname=viperx
pkgver=1.0.2
pkgrel=1
pkgdesc="Professional Python Project Initializer with uv, ml/dl support"
arch=('any')
url="https://github.com/KpihX/viperx"
license=('MIT')
depends=('python' 'python-pip')
makedepends=('python-build' 'python-installer' 'python-wheel')
source=("https://files.pythonhosted.org/packages/source/v/viperx/viperx-${pkgver}.tar.gz")
sha256sums=('REPLACE_WITH_ACTUAL_SHA256')

build() {
    cd "$srcdir/viperx-$pkgver"
    python -m build --wheel --no-isolation
}

package() {
    cd "$srcdir/viperx-$pkgver"
    python -m installer --destdir="$pkgdir" dist/*.whl

    # License
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
